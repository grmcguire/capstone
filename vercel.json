{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "vite",
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/node@18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  }
}